<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="form-header">Edit Comment</h1>
	
		<div class="form-content">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit!</button>
				</div>
			</form>

			<a href="/campgrounds/<%= campground_id %>">Go back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>
